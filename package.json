{
	"name": "vscode-nodebook",
	"displayName": "Nodebook",
	"version": "0.0.1",
	"private": false,
	"description": "Node.js Notebook for VS Code",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"updatetypes": "cd src/types && vscode-dts dev && vscode-dts master",
		"vscode:prepublish": "yarn run compile",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "nodebook.toggleDebugging",
				"icon": "$(bug)",
				"title": "Toggle Debugging"
			},
			{
				"command": "nodebook.restartKernel",
				"icon": "$(refresh)",
				"title": "Restart Kernel"
			}
		],
		"languages": [
			{
				"aliases": [
					"Node.js Notebook"
				],
				"id": "nodebook"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "nodebook.toggleDebugging",
					"group": "navigation@1",
					"when": "notebookEditorFocused"
				},
				{
					"command": "nodebook.restartKernel",
					"group": "navigation@2",
					"when": "notebookEditorFocused"
				}
			]
		},
		"notebookProvider": [
			{
				"displayName": "Node.js Notebook",
				"selector": [
					{
						"filenamePattern": "*.nodebook"
					}
				],
				"viewType": "nodebook"
			}
		]
	},
	"activationEvents": [
		"onNotebookEditor:nodebook",
		"onNotebook:nodebook",
		"onDebugDynamicConfigurations:node"
	],
	"dependencies": {
		"get-port": "^5.1.1",
		"rimraf": "^3.0.2",
		"vscode-debugprotocol": "1.41.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^13.11.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"typescript-esbuild": "0.4.5",
		"vscode-dts": "^0.3.1",
		"vscode-test": "^1.4.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"enableProposedApi": true
}
